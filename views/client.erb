<div class="row text-center">
  <h3>client detail</h3>

<table class="table table-hover">
  <tr id="first-row">
    <th width="40%" class="text-center">name: <%= @client.name %></th>
    <th width="40%" class="text-center">stylist: <%= @stylist.name %></th>
    <th width="10%"></th>
  </tr>

  <tr>
    <form class="form-inline" action="/clients/<%= @client.id %>" method="post">
      <input type="hidden" name="_method" value="patch">

      <td width="40%">
        <label hidden for="name">change client name</label>
        <input class="form-control" type="text" name="new_name" id="new_name" placeholder="change client name">
      </td>

      <td width="40%">
        <label hidden for="stylist">change client stylist</label>
        <select class="form-control" name="new_stylist_id">
          <option value="<%= @stylist.id %>" disabled selected>change client stylist</option>
          <% @stylists.each do |stylist| %>
            <option value="<%= @stylist.id %>"><%= stylist.name %></option>
          <% end %>
        </select>
      </td>

      <td width="10%">
        <button class="btn btn-primary btn-sm form-control" name="submit" type="submit">save</button>
      </td>

    </form>
  </tr>
</table>

<form class="form-inline" action="/clients/<%= @client.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" name="delete" class="form-control btn btn-danger btn-sm">delete client</button>
</form>

</div>
